{
  "manifest_version": 3,
  "name": "My Phishing Detector",
  "version": "1.0",
  "description": "เครื่องมือตรวจจับเว็บไซต์ฟิชชิ่งเบื้องต้น.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
